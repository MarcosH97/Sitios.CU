<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    style="@style/custom_settings"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/linear0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >
                <ImageView
                    android:id="@+id/logo_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ic_head_banner"
                    android:layout_gravity="center"
                    android:longClickable="true"
                    android:elevation="6dp"
                    />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>


            <LinearLayout
                android:id="@+id/linearL0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"

                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:id="@+id/img0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_book"
                        />
                    <TextView
                        android:id="@+id/dira"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Directorio"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/img0"
                        android:textColor="?attr/colorSecondary"

                        />
                    <ImageButton
                        android:id="@+id/arrow0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <GridLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="2"
                        android:columnCount="4"
                        android:visibility="visible"
                        android:background="@drawable/curved_btn1_2"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="6dp"
                        >

                        <ImageButton
                            android:id="@+id/etecsa_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btnnet"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/culture_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btncul"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/ppm_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btnppm"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/uni_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btnuni"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/infor_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btninfo"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/edu_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btnedu"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/rtv_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btnrtv"
                            android:layout_margin="5dp"
                            />
                        <ImageButton
                            android:id="@+id/trade_btn"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/btntrade"
                            android:layout_margin="5dp"
                            />
                    </GridLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                >


                <RelativeLayout
                    android:id="@+id/cardView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_btn01"
                    android:layout_marginStart="10dp"
                    android:elevation="6dp"
                    >

                    <TextView
                        android:id="@+id/acc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A. RÃ¡pido"
                        android:textSize="35sp"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="?attr/colorSecondary"
                        android:layout_margin="10dp"/>

                    <ImageButton
                        android:id="@+id/arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_arrow_up"
                        android:layout_marginEnd="20dp"
                        android:layout_toRightOf="@id/acc"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rela2"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:visibility="visible"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_search"
                    />

                <TextView
                    android:id="@+id/ser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscador"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/img1"
                    android:textColor="?attr/colorSecondary"
                    android:layout_centerVertical="true"/>

                <ImageButton
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow_down"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/scroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="gone"

                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="6dp"
                android:background="@drawable/curved_btn1_2"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageButton
                        android:id="@+id/simple_search"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@drawable/search_simple_selected"
                        android:layout_margin="5dp"
                        android:focusable="true"
                        />
                    <ImageButton
                        android:id="@+id/advanced_search"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/search_advanced"
                        android:layout_margin="5dp"
                        android:focusable="true"
                        />
                    <Button
                        android:id="@+id/list_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/filter_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:singleLine="true"
                        android:nestedScrollingEnabled="true"
                        >
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/filter_group2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    android:visibility="gone"
                    >
                </com.google.android.material.chip.ChipGroup>

                <SearchView
                    android:id="@+id/searcher"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:queryHint="escriba un sitio"
                    android:iconifiedByDefault="false"
                    />
                <ListView
                    android:id="@+id/search_list"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:nestedScrollingEnabled="true"
                    />
                <!--            <ScrollView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                >-->
                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    />-->
                <!--            </ScrollView>-->

            </LinearLayout>
            <LinearLayout
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"

                >
                <RelativeLayout
                    android:id="@+id/rela3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_contact"
                        />
                    <TextView
                        android:id="@+id/con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacto"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/img3"
                        android:textColor="?attr/colorSecondary"
                        android:layout_centerVertical="true"
                        />

                    <ImageButton
                        android:id="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_down"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_btn1_2"
                    android:orientation="vertical"

                    android:visibility="gone"

                    android:elevation="6dp"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"


                        android:text="Esta herramienta ha sido desarrollada por:"
                        android:textAlignment="center"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:src="@drawable/mahologo2" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:justificationMode="inter_word"
                        android:text="@string/petition"
                        android:textAlignment="center"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="50dp"
                        android:fontFamily="@font/googlesans_medium"
                        android:justificationMode="inter_word"
                        android:text="Puede escribirnos a las siguientes direcciones:"
                        android:textAlignment="center"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp">

                        <ImageButton
                            android:id="@+id/contact0"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentStart="true"

                            android:layout_marginStart="10dp"/>

                        <ImageButton
                            android:id="@+id/contact1"
                            android:layout_width="50sp"
                            android:layout_height="35sp"
                            android:layout_marginTop="10sp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ic_mailblack"
                            android:visibility="gone"
                            />

                        <ImageButton
                            android:id="@+id/contact2"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Telegram Dev"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="10sp"
                            android:autoSizeMinTextSize="7sp"
                            android:layout_below="@+id/contact0"
                            android:layout_alignParentStart="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Correo"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="15sp"

                            android:visibility="gone"

                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="10sp"
                            android:autoSizeMinTextSize="7sp"
                            android:layout_below="@id/contact1"
                            android:layout_centerInParent="true"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Telegram Oficial"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="10sp"
                            android:autoSizeMinTextSize="7sp"
                            android:layout_below="@id/contact2"
                            android:layout_alignParentEnd="true"
                            android:textAlignment="textEnd"
                            />

                        <TextView
                            android:id="@+id/version_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>

