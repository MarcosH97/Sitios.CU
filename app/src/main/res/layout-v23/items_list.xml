<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    android:elevation="8dp"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            >
<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/curved_btn2"/>-->

            <ImageView
                android:id="@+id/down_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_down"
                android:layout_gravity="center|start"
                android:layout_marginStart="10sp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/cost_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cost"
                android:layout_gravity="center|end"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/page_http"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="5dp"
                android:text="nombre"
                android:textSize="20dp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeMaxTextSize="40sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"
                />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            >
            <TextView
                android:id="@+id/page_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/white"
                android:justificationMode="inter_word"
                android:fontFamily="@font/googlesans_regular"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/curved_btn2"
                >
            </TextView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="40sp"
           android:layout_gravity="center"
           android:layout_margin="5dp">

           <ImageButton
               android:id="@+id/web_btn"
               android:layout_width="30sp"
               android:layout_height="30sp"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:layout_marginStart="20dp"
               android:background="@drawable/ic_web"
               android:elevation="16dp"
               android:visibility="visible" />

           <Button
               android:id="@+id/barbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:elevation="18dp"
               android:fontFamily="@font/googlesans_bold"
               android:background="@drawable/curved_btn5"
               android:text="mostrar mÃ¡s"
               android:textAllCaps="false"
               android:textColor="?attr/colorSecondary"
               android:textSize="15sp"

               />

           <ImageButton
               android:id="@+id/share_btn"
               android:layout_width="27sp"
               android:layout_height="27sp"
               android:background="@drawable/ic_send"
               android:layout_gravity="center"
               android:visibility="visible"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="20dp"
               android:elevation="16dp"
               />

           <Button
               android:id="@+id/sharebtn"
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:text="abrir en..."
               android:fontFamily="@font/googlesans_bold"
               android:layout_gravity="center|bottom"
               android:background="@color/transparent"
               android:textColor="@color/white"
               android:textAllCaps="false"
               android:paddingStart="5dp"
               android:paddingEnd="5dp"
               android:layout_marginHorizontal="10dp"
               android:visibility="gone"
               />
       </RelativeLayout>
<!--        <Button-->
<!--            android:id="@+id/barbtn"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="15dp"-->
<!--            android:background="@drawable/ic_bar"-->
<!--            android:scaleY="0.4"-->
<!--            android:layout_gravity="center|bottom"-->
<!--            />-->

    </LinearLayout>
</androidx.cardview.widget.CardView>